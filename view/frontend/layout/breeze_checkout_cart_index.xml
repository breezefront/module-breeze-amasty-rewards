<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="breeze.container">
            <block
                class="Swissup\Breeze\Block\HtmlTemplate"
                name="breeze.Amasty_Rewards_highlight"
                template="Amasty_Rewards::highlight.html"
            />
        </referenceContainer>
        <referenceBlock name="checkout.cart.amreward">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">
                    Swissup_BreezeAmastyRewards::cart/rewards.phtml
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
